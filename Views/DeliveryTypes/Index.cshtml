@model IEnumerable<HSHDelivery.Models.DeliveryType>

@{
    ViewData["Title"] = "Index";
}




<div class="border backgroundWhite p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-dark">จัดการประเภทสินค้า</h2>
        </div>
        <div class="p-2">
            @Html.Partial("_CreateButtonPartial")
        </div>
    </div>
    <div class="form-border">
       
        
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveryTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreateDate)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.DeliveryTypeId"> <i class="fas fa-edit"></i></a>
                            <a asp-action="Details" class="btn btn-sm btn-success" asp-route-id="@item.DeliveryTypeId"> <i class="far fa-list-alt"></i></a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.DeliveryTypeId">  <i class="fas fa-trash-alt"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
      
    </div>
</div>